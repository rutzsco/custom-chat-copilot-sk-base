@page "/v2/history"

<PageTitle>Chat History</PageTitle>

<MudGrid Justify="Justify.Center">

    <MudItem xs="12">
        <MudTable Items="@_chatSessions" Dense="true" Hover="true" Bordered="true" FixedHeader="true" Elevation="4">
            <ToolBarContent>
                @if (_isLoadingDocuments)
                {
                    <MudText Typo="Typo.h5">Loading...</MudText>
                    <MudProgressCircular Indeterminate="true" Size="Size.Small" Class="ml-2" />
                }
                else
                {
                    <MudText Typo="Typo.h5">Chat History</MudText>
                }
                <MudSpacer />
            </ToolBarContent>
            <HeaderContent>
                <MudTh Style="text-align:center">Description</MudTh>
                <MudTh Style="text-align:center">Profile</MudTh>
                <MudTh Style="text-align:center">Timestamp</MudTh>
                <MudTh Style="text-align:center"></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Description" Style="text-align:center"><strong>@context.Description</strong></MudTd>
                <MudTd DataLabel="Profile" Style="text-align:center"><MudChip T="string" Variant="Variant.Text" Size="Size.Small">@context.Profile</MudChip></MudTd>
                <MudTd DataLabel="Timestamp" Style="text-align:center"><strong>@context.Timestamp</strong></MudTd>
                <MudTd DataLabel="Timestamp" Style="text-align:center"><MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="@(() => ViewChat(context.ChatId))">View</MudButton></MudTd>              
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </MudItem>
    <MudScrollToTop Selector="#uploads" VisibleCssClass="visible absolute" HiddenCssClass="invisible">
        <MudFab Color="Color.Primary" IconSize="Size.Large" StartIcon="@Icons.Material.Filled.ArrowUpward" />
    </MudScrollToTop>
</MudGrid>