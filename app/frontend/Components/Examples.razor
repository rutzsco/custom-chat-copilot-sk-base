<MudGrid Justify="Justify.Center" Spacing="2">
    <MudItem xs="0" sm="0" md="0" lg="12" Class="d-flex">
        <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Class="icon-huge ma-auto" Color="Color.Primary" />
    </MudItem>
    <MudItem xs="12" Class="mb-2">
        <MudText Typo="Typo.h3" Align="Align.Center">@Message</MudText>
    </MudItem>
    @if (Profile != null)
    {
        @if (Profile.SampleQuestions != null)
        {
            @foreach (var question in Profile.SampleQuestions)
            {
                <MudItem lg="3" xs="12">
                    <MudPaper Elevation="4" Height="10rem" onclick="@(async () => await OnClickedAsync(question))" Class="d-flex ma-2 pa-4 clickable flex-column align-center justify-center mud-width-full rounded dim">
                        <MudText Typo="Typo.body1">
                            @question
                        </MudText>
                    </MudPaper>
                </MudItem>
            }
        }

        @if (Profile.PromptTemplates != null)
        {
            @foreach (var template in Profile.PromptTemplates)
            {
                <MudItem lg="3" xs="12">
                    <MudPaper Elevation="4" Height="10rem"  Class="d-flex ma-2 pa-4 clickable flex-column align-center justify-center mud-width-full rounded dim">
                        <MudStack>
                            <MudText Typo="Typo.body1">@template.Name</MudText>
                            @foreach (var variable in template.Variables)
                            {
                                <MudTextField @bind-Value="variable.Value" Label="@variable.Name" Variant="Variant.Outlined"></MudTextField>
                            }

                            <MudIconButton Class="pa-2" Size="Size.Small" Icon=@Icons.Material.Outlined.Send Color="Color.Secondary" OnClick="@(async () => await OnPromptTemplateClickedAsync(template.Name))">Load</MudIconButton>
                        </MudStack>
                    </MudPaper>
                </MudItem>
            }
        }
    }
</MudGrid>